<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="providerSampleApp.Page1"
             Title="DashBoard">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" ContentLayout="Top,0" BackgroundColor="Transparent" Text="Post Op" TextColor="DodgerBlue" Image="postop.png"></Button>
                <Button Grid.Row="0" Grid.Column="1" ContentLayout="Top,0" BackgroundColor="Transparent" Text="Patients" TextColor="DodgerBlue" Image="people.png" Clicked="Button_Clicked_1"></Button>
                <Button Grid.Row="1" Grid.Column="0" ContentLayout="Top,0" BackgroundColor="Transparent" Text="Metrics" TextColor="DodgerBlue" Image="metrics.png"></Button>
                <Button Grid.Row="1" Grid.Column="1" ContentLayout="Top,0" HeightRequest="40" BackgroundColor="Transparent" Text="Team Directory" TextColor="DodgerBlue" Image="directory.png" Clicked="Button_Clicked"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>